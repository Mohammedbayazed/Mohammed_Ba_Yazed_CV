@model AboutMe.Models.ContactViewModel

@{
    ViewData["Title"] = "Mohammed Ba Yazed - Programmer";
    Layout = "_Layout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar">
        <div class="container">
            <div class="nav-brand">
                <span class="brand-yellow">MB</span><span class="brand-white">YAZED</span>
            </div>
            <button class="mobile-menu-btn" onclick="toggleMobileMenu()">☰</button>
            <div class="nav-links" id="navLinks">
                <a href="#about" onclick="closeMobileMenu()">About</a>
                <a href="#experience" onclick="closeMobileMenu()">Experience</a>
                <a href="#skills" onclick="closeMobileMenu()">Skills</a>
                <a href="#projects" onclick="closeMobileMenu()">Projects</a>
                <a href="#contact" onclick="closeMobileMenu()">Contact</a>
            </div>
        </div>
    </nav>

    <!-- Hero Section -->
    <section class="hero">
        <div class="hero-bg"></div>
        <div class="container hero-content">
            <h1 class="hero-title">
                <span class="hero-name">MOHAMMED</span><br>
                <span class="hero-name-highlight">BA YAZED</span>
            </h1>
            <div class="hero-subtitle">&lt; PROGRAMMER /&gt;</div>
            <p class="hero-description">
                Enthusiastic Computer Science student passionate about web and application development.
                Currently pursuing a Bachelor's degree with a focus on creating innovative digital solutions.
            </p>
            <div class="hero-buttons">
                <a href="#contact" class="btn btn-primary">Get In Touch</a>
                <a href="@Url.Action("DownloadCV", "Home")" class="btn btn-secondary">
                    <span class="btn-icon">⬇</span> Download CV
                </a>
            </div>
        </div>
    </section>

    <!-- About Section -->
    <section id="about" class="section-about">
        <div class="container">
            <h2 class="section-title"><span class="text-yellow">About</span> Me</h2>
            <div class="about-card">
                <p class="about-text">
                    I am an enthusiastic and dedicated student seeking internship opportunities to gain hands-on
                    experience and contribute to a professional environment. Recognized for strong teamwork,
                    communication, and time management skills developed through volunteer and community service work.
                </p>
                <p class="about-text">
                    Adept at using computers for organization and problem-solving, with a positive attitude and
                    a commitment to learning. Fluent in Arabic and skilled at building strong relationships with
                    diverse individuals. Eager to apply academic knowledge and practical skills to support team
                    goals and grow professionally.
                </p>
            </div>
        </div>
    </section>

    <!-- Experience Section -->
    <section id="experience" class="section-experience">
        <div class="container">
            <h2 class="section-title"><span class="text-yellow">Experience</span> & Education</h2>
            <div class="experience-grid">
                <!-- Work Experience -->
                <div class="experience-card">
                    <div class="badge">APR - MAY 2018</div>
                    <h3 class="card-title">Volunteer</h3>
                    <p class="card-subtitle">Family Business • Jeddah, Saudi Arabia</p>
                    <ul class="card-list">
                        <li>Assisted in organizing and supporting community events and family programs</li>
                        <li>Maintained clean, functional, and welcoming facilities to meet event needs</li>
                        <li>Collaborated with team members to ensure smooth operations and visitor satisfaction</li>
                        <li>Communicated effectively with staff to stay informed about upcoming activities</li>
                        <li>Strengthened interpersonal and problem-solving skills in a dynamic environment</li>
                    </ul>
                </div>

                <!-- Education -->
                <div class="education-cards">
                    <div class="experience-card">
                        <div class="badge">2023 - APR 2027</div>
                        <h3 class="card-title">Bachelor of Computer Science</h3>
                        <p class="card-subtitle">Application Development</p>
                        <p class="card-text">Varsity College</p>
                    </div>

                    <div class="experience-card">
                        <div class="badge">2022 - 2023</div>
                        <h3 class="card-title">Higher Certificate</h3>
                        <p class="card-subtitle">Mobile Application & Web Development</p>
                        <p class="card-text">Varsity College</p>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Skills Section -->
    <section id="skills" class="section-skills">
        <div class="container">
            <h2 class="section-title"><span class="text-yellow">Skills</span> & Expertise</h2>
            <div class="skills-grid">
                <div class="skills-card">
                    <h3 class="skills-title">⚡ Technical Skills</h3>
                    <div class="skills-tags">
                        <span class="skill-tag skill-tag-primary">Computer Literacy</span>
                        <span class="skill-tag skill-tag-primary">Web Development</span>
                        <span class="skill-tag skill-tag-primary">Application Development</span>
                        <span class="skill-tag skill-tag-primary">Time Management</span>
                        <span class="skill-tag skill-tag-primary">C#</span>
                        <span class="skill-tag skill-tag-primary">.NET</span>
                        <span class="skill-tag skill-tag-primary">MVC</span>
                        <span class="skill-tag skill-tag-primary">Cloud Computing</span>
                    </div>
                </div>

                <div class="skills-card">
                    <h3 class="skills-title">🎯 Soft Skills</h3>
                    <div class="skills-tags">
                        <span class="skill-tag skill-tag-secondary">Teamwork & Collaboration</span>
                        <span class="skill-tag skill-tag-secondary">Positive Attitude</span>
                        <span class="skill-tag skill-tag-secondary">Relationship Building</span>
                        <span class="skill-tag skill-tag-secondary">Community Service</span>
                        <span class="skill-tag skill-tag-secondary">Arabic Fluency</span>
                        <span class="skill-tag skill-tag-secondary">Problem Solving</span>
                        <span class="skill-tag skill-tag-secondary">Communication</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Projects Section -->
    <section id="projects" class="section-projects">
        <div class="container">
            <h2 class="section-title"><span class="text-yellow">Featured</span> Projects</h2>
            <div class="projects-grid">
                <div class="project-card">
                    <div class="project-header">
                        <svg class="project-icon" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                        </svg>
                        <a href="https://github.com/VCCT-CLDV6212-2025-G2/CLDV_Part2_ST10174227" target="_blank" class="project-link">↗</a>
                    </div>
                    <h3 class="project-title">Cloud Application (Part 2)</h3>
                    <p class="project-description">
                        Advanced cloud-based application development project showcasing distributed systems and cloud architecture patterns.
                    </p>
                    <div class="project-tags">
                        <span class="tag">Cloud</span>
                        <span class="tag">Azure</span>
                        <span class="tag">C#</span>
                        <span class="tag">.NET</span>
                    </div>
                </div>

                <div class="project-card">
                    <div class="project-header">
                        <svg class="project-icon" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path>
                        </svg>
                        <a href="https://github.com/VCCT-CLDV6212-2025-G2/CLDV_Part1" target="_blank" class="project-link">↗</a>
                    </div>
                    <h3 class="project-title">Cloud Application (Part 1)</h3>
                    <p class="project-description">
                        Foundation cloud application project demonstrating core cloud computing principles and best practices.
                    </p>
                    <div class="project-tags">
                        <span class="tag">Cloud</span>
                        <span class="tag">Development</span>
                        <span class="tag">.NET</span>
                        <span class="tag">Azure</span>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="section-contact">
        <div class="container">
            <h2 class="section-title"><span class="text-yellow">Get In</span> Touch</h2>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="success-message">
                    @TempData["SuccessMessage"]
                </div>
            }

            <div class="contact-grid">
                <!-- Contact Info -->
                <div class="contact-info">
                    <div class="contact-card">
                        <div class="contact-icon">📞</div>
                        <div>
                            <p class="contact-label">Phone</p>
                            <p class="contact-value">+27 74 799 0677</p>
                        </div>
                    </div>

                    <div class="contact-card">
                        <div class="contact-icon">✉️</div>
                        <div>
                            <p class="contact-label">Email</p>
                            <p class="contact-value">Mohazed310@gmail.com</p>
                        </div>
                    </div>

                    <div class="contact-card">
                        <div class="contact-icon">📍</div>
                        <div>
                            <p class="contact-label">Location</p>
                            <p class="contact-value">53 Main Rd, Claremont<br>Cape Town, South Africa</p>
                        </div>
                    </div>
                </div>

                <!-- Contact Form -->
                <div class="contact-form-container">
                    <form asp-action="SendMessage" asp-controller="Home" method="post" class="contact-form">
                        @Html.AntiForgeryToken()

                        <div class="form-group">
                            <label asp-for="Name">Your Name</label>
                            <input asp-for="Name" class="form-control" placeholder="John Doe" />
                            <span asp-validation-for="Name" class="error-message"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Email">Email Address</label>
                            <input asp-for="Email" class="form-control" placeholder="john@example.com" />
                            <span asp-validation-for="Email" class="error-message"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Message">Your Message</label>
                            <textarea asp-for="Message" class="form-control" rows="5" placeholder="Write your message here..."></textarea>
                            <span asp-validation-for="Message" class="error-message"></span>
                        </div>

                        <button type="submit" class="btn btn-submit">Send Message</button>
                    </form>
                </div>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>© 2025 Mohammed Ba Yazed. Built with <span class="text-yellow">passion</span> and <span class="text-yellow">code</span>.</p>
        </div>
    </footer>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}